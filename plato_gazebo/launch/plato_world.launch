<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <param name="use_sim_time" value="true"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find plato_gazebo)/worlds/cafe.world"/>
        <arg name="paused" value="false"/>
        <arg name="verbose" value="true" />
    </include>

    <include file="$(find plato_gazebo)/launch/spawn_person.launch">
        <arg name="x" value="2.0"/>
        <arg name="y" value="0"/>
        <arg name="z" value="0.5"/>
        <arg name="yaw" value="0.0"/>
        <arg name="robot_name" value="person_naokoeye"/>
        <arg name="sdf_robot_file" value="$(find plato_gazebo)/models/person_naokoeye/model.sdf"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro.py '$(find plato_description)/urdf/plato.xacro'"/>

    <node name="plato_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model plato_robot -z 0.5"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher"
                type="robot_state_publisher"/>

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
              <param name="use_gui" value="False"/>
    </node>

    <node pkg="tf" type="static_transform_publisher" name="camera_2_velodyne" args="0 0.07 0 1.5707963 3.14159 1.5707963 velodyne camera 100"/>

    <!-- <include file="$(find plato_follower)/launch/plato_darknet.launch">
      <arg name="model_name" value="yolov3"/>
    </include> -->

</launch>
